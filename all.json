[
    {
        "hosts": "mate",
        "remote_user": "root",
        "tasks": [
            {
                "name": "add x2go user",
                "user": {
                    "name": "x2go",
                    "comment": "X2GO User", 
                    "group": "users", 
                    "generate_ssh_key": "yes"
                }
            }, 
            {
                "name": "add x2go repo key",
                "apt_key": {
                    "keyserver": "keys.gnupg.net",
                    "id": "E1F958385BFE2B6E"
                }
            }, 
            {
                "name": "add x2go repo",
                "apt_repository": {
                    "repo": "deb http://packages.x2go.org/debian stretch extras main",
                    "state": "present", 
                    "update_cache": "yes"
                }
            }, 
            {
                "name": "install mate",
                "apt": {
                    "name": "mate-desktop", 
                    "allow_unauthenticated": "yes"
                }
            }, 
            {
                "name": "install x2go",
                "apt": {
                    "name": "x2goserver", 
                    "allow_unauthenticated": "yes"
                }
            }
        ]
    }
]